<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cardiew_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txt_icon_email"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="F"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/circle"/>

        <TextView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@id/txt_date"
            android:layout_toEndOf="@id/txt_icon_email"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Facebook"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:layout_alignStart="@id/user"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="O Facebook deseja a voçê uma otima semana"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_email_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_subject"
            android:layout_alignStart="@id/txt_subject"
            android:layout_marginEnd="24dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Venha ver as novidades da plataforma, para melhor o engajamento da sua empresa"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="02 fev" />

        <ImageView
            android:id="@+id/imv_estrela"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_estrela_24" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>